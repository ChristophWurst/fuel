<database>
	<name>*dbname*</name>
	<create>true</create>
	<overwrite>false</overwrite>
	<charset>utf8</charset>
	<table>
		<name>*dbprefix*fuel_vehicles</name>
		<declaration>
			<field>
				<name>id</name>
				<type>integer</type>
				<notnull>true</notnull>
				<autoincrement>true</autoincrement>
				<unsigned>true</unsigned>
				<primary>true</primary>
				<length>8</length>
			</field>
			<field>
				<name>name</name>
				<type>text</type>
				<length>200</length>
				<default></default>
				<notnull>true</notnull>
			</field>
			<field>
				<name>user_id</name>
				<type>text</type>
				<length>200</length>
				<default></default>
				<notnull>true</notnull>
			</field>
		</declaration>
	</table>
	<table>
		<name>*dbprefix*fuel_records</name>
		<declaration>
			<field>
				<name>id</name>
				<type>integer</type>
				<notnull>true</notnull>
				<autoincrement>true</autoincrement>
				<unsigned>true</unsigned>
				<length>8</length>
			</field>
			<field>
				<name>vehicle_id</name>
				<type>integer</type>
				<notnull>true</notnull>
				<unsigned>true</unsigned>
				<length>8</length>
			</field>
			<field>
				<name>odo</name>
				<type>integer</type>
				<notnull>true</notnull>
				<unsigned>true</unsigned>
				<length>8</length>
			</field>
			<field>
				<name>fuel</name>
				<type>float</type>
				<notnull>true</notnull>
			</field>
			<field>
				<name>price</name>
				<type>float</type>
				<notnull>true</notnull>
			</field>
			<field>
				<name>date</name>
				<type>date</type>
				<notnull>true</notnull>
			</field>
			<field>
				<name>user_id</name>
				<type>text</type>
				<length>200</length>
				<default></default>
				<notnull>true</notnull>
			</field>
			<!-- INDICES -->
			<index>
				<name>index_fuel_record_primary</name>
				<primary>true</primary>
				<unique>true</unique>
				<field>
					<name>id</name>
				</field>
				<field>
					<name>vehicle_id</name>
				</field>
			</index>
		</declaration>
	</table>
</database>